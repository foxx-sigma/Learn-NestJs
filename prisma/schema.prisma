generator client {
  provider = "prisma-client-js"
//  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_transaksi Transaksi[]
}
model Menu {
  id_menu   Int       @id @default(autoincrement())
  nama      String
  harga     Int
  deskripsi String
  category  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  detail_Transaksi detail_Transaksi[]
}

enum Payment {
  CASH 
  QRIS
}

model Transaksi {
  id_transaksi Int      @id @default(autoincrement())
  id_menu      Int
  payment      String
  jumlah       Int
  total_harga  Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

 
  User User?             @relation(fields: [id_menu], references: [id])
  detail_Transaksi       detail_Transaksi[]
}
model detail_Transaksi {
  id_detail    Int      @id @default(autoincrement())
  quentity     Int
  subtotal     Int
  menu         Menu? @relation(fields: [menuid_menu], references: [id_menu])
  menuid_menu Int?
  Transaksi    Transaksi? @relation(fields: [Transaksiid_transaksi], references: [id_transaksi])
  Transaksiid_transaksi Int?
  

  
}